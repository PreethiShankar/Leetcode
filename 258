class Solution:
    def addDigits(self, num: int) -> int:
      
        def sumfunc(num):
            sum =0
            for i in str(num):
                print(i)
                sum += int(i)
          
            if sum <10:
                    print(sum)
                    return sum
            else:
             return sumfunc(sum)
           
        return sumfunc(num)